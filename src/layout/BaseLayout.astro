---
import 'a11y-css-reset/combo.css'
import '../styles/global.css'
import SpeedInsights from '@vercel/speed-insights/astro'
import { Header } from '../components/Organisms/common/Header'
import { Nav } from '../components/Organisms/common/Nav'
import { Footer } from '../components/Organisms/common/Footer'
import { ToTopButton } from '@/components/UI/Molecules/ToTopButton/ToTopButton'

const { pageTitle, description, ogUrl, ogType = 'article', ogTitle } = Astro.props
---

<html lang='ja'>
  <head>
    <meta charset='UTF-8' />
    <link rel='icon' type='image/svg+xml' href='https://nits-tips.blog/favicon.svg' />
    <link rel='apple-touch-icon' type='image/png' href='https://nits-tips.blog/favicon.svg' />
    <link rel='canonical' href={`https://nits-tips.blog${ogUrl}`} />
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://db.onlinewebfonts.com/c/7dfbbadad6290e6bc7e4569b97eeba66?family=NicoKaku'
      rel='stylesheet'
    />
    <link
      rel='stylesheet'
      href='https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200'
    />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <meta name='generator' content={Astro.generator} />
    <meta name='description' content={description} />
    <meta property='og:url' content={new URL(Astro.request.url)} />
    <meta property='og:type' content={ogType} />
    <meta property='og:title' content={ogTitle} />
    <meta property='og:description' content={description} />
    <meta property='og:site_name' content='nits-tips' />
    <meta property='og:image' content='/favicon.svg' />
    <title>{pageTitle}</title>
  </head>
  <body>
    <Header />
    <Nav />
    <slot />
    <ToTopButton client:load />
    <Footer />
    <SpeedInsights />
  </body>
</html>
